{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
